{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Algorithm Meta-Parameters",
  "required": ["bsz","maxl","l","budget","fuzzer_arch","fuzzer_checkpoint"],
  "type": "object",
  "properties": {
    "bsz": {
      "description": "Batch size for clean example inference ",
      "type": "integer",
      "minimum": 12,
      "maximum": 72
    },
    "maxl": {
      "description": "Surrogate trigger length",
      "type": "integer",
      "minimum": 8,
      "maximum": 8
    },
    "l": {
      "description": "Trigger length cap",
      "type": "integer",
      "minimum": 1,
      "maximum": 8
    },
    "budget": {
      "description": "Bayesian optimization budget in number of triggers",
      "type": "integer",
      "minimum": 1,
      "maximum": 2000
    },
    "fuzzer_arch": {
      "description": "Fuzzer architecture",
      "type": "string"
    },
    "fuzzer_checkpoint": {
      "description": "Fuzzer checkpoint",
      "type": "string"
    }
  }
}
